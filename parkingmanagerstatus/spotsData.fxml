                           <font>
                              <Font size="18.0" />
                           </font>
                        </TextArea>
                        <Button layoutX="32.0" layoutY="488.0" mnemonicParsing="false" onAction="#goMainView" prefHeight="79.0" prefWidth="102.0" style="-fx-background-color: #7c7393;" text="Back" textFill="#4d1b1b">
